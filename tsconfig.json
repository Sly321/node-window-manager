{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types"],
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2015",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "types": ["node"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules/**/*"]
}
